			--font /usr/share/fonts/TTF/JetBrainsMonoNerdFont-Regular.ttf \
			--font-size 14 \
			--prompt-text " run: " \
			--width 100% --height 30 \
			--horizontal true \
			--hint-font false \
			--anchor top \
			--outline-width 0 \
			--border-width 0 \
			--min-input-width 200 \
			--result-spacing 20 \
			--padding-top 0 \
			--padding-left 0 \
			--padding-right 0 \
			--background-color "#000000" \
			--selection-color "#723ee4" \
			--terminal="/usr/bin/alacritty -e" \
			| xargs swaymsg exec --

