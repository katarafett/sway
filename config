focus_wrapping no

input "type:keyboard" {
	xkb_options caps:escape
	repeat_delay 300
	repeat_rate 20
}

input "type:touchpad" {
	natural_scroll disabled
	tap enabled
	accel_profile "flat"
	pointer_accel 0.8
}

